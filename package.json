{
  "name": "electron-api-dashboard-app",
  "description": "An API Dashboard for McMineserver",
  "version": "0.1.0-beta.1",
  "author": "DerLev",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/DerLev/electron-api-dashboard-app.git"
  },
  "productName": "API Dashboard",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-brands-svg-icons": "^5.15.4",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.15",
    "auto-launch": "^5.0.5",
    "axios": "^0.21.1",
    "electron-updater": "^4.3.9",
    "moment": "^2.29.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "simplebar-react": "^2.3.5"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "ELECTRON_START_URL=http://localhost:3000 electron .",
    "electron-dev:win": "set ELECTRON_START_URL=http://localhost:3000 && electron .",
    "dev": "nf start",
    "react": "BROWSER=none craco start",
    "react:win": "set BROWSER=none && craco start",
    "dist": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always",
    "pack": "electron-builder --dir"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^6.2.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.24",
    "@types/node": "^12.20.19",
    "@types/react": "^17.0.16",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@types/react-transition-group": "^4.4.2",
    "autoprefixer": "^9.8.6",
    "electron": "^13.1.8",
    "electron-builder": "^22.11.7",
    "foreman": "^3.0.1",
    "postcss": "^7.0.36",
    "react-scripts": "^4.0.3",
    "react-transition-group": "^4.4.2",
    "sass": "^1.37.5",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.7",
    "typescript": "^4.3.5"
  },
  "build": {
    "appId": "de.mc-mineserver.electron-api-dashboard-app",
    "productName": "API Dashboard",
    "publish": {
      "provider": "github"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  }
}
